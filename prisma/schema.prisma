generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Book {
  id                Int       @id @default(autoincrement())
  slug              String    @unique
  title             String
  subtitle1         String?
  subtitle2         String?
  tagsCsv           String?
  isbn              String?
  copyright         String?
  blurb             String?
  coverUrl          String?
  backCoverUrl      String?
  ebookFileUrl      String?
  hasEbook          Boolean   @default(true)
  ebookPrice        Decimal?  @db.Decimal(10, 2)
  hasPaperback      Boolean   @default(false)
  hasHardcover      Boolean   @default(false)
  paperbackPrice    Decimal?  @db.Decimal(10, 2)
  hardcoverPrice    Decimal?  @db.Decimal(10, 2)
  allowRetailerSale Boolean   @default(false)
  isFeatured        Boolean   @default(false)
  isPublished       Boolean   @default(false)
  isVisible         Boolean   @default(false)
  isComingSoon      Boolean   @default(false)
  allowDirectSale   Boolean   @default(false)
  stripePaymentLink String?
  paypalPaymentLink String?
  seoTitle          String?
  seoDescription    String?
  ogImageUrl        String?
  publishedAt       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  retailers         BookRetailerLink[]
  orders            Order[]
  downloadTokens    DownloadToken[]
}

model Retailer {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  iconUrl   String?
  isActive  Boolean   @default(true)
  books     BookRetailerLink[]
}

model BookRetailerLink {
  id         Int      @id @default(autoincrement())
  bookId     Int
  retailerId Int
  url        String
  formatType String   @default("ebook")
  isActive   Boolean  @default(true)
  book       Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  retailer   Retailer @relation(fields: [retailerId], references: [id], onDelete: Cascade)
  @@unique([bookId, retailerId, formatType])
}

model Order {
  id              Int       @id @default(autoincrement())
  email           String
  customerName    String?
  stripeSessionId String?   @unique
  stripePaymentId String?
  paypalOrderId   String?   @unique
  bookId          Int
  book            Book      @relation(fields: [bookId], references: [id])
  formatType      String
  amount          Decimal   @db.Decimal(10, 2)
  currency        String    @default("usd")
  status          String    @default("pending")
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  completedAt     DateTime?
  downloadTokens  DownloadToken[]
  @@index([email])
  @@index([stripeSessionId])
  @@index([paypalOrderId])
  @@index([bookId])
}

model DownloadToken {
  id              Int       @id @default(autoincrement())
  token           String    @unique @default(cuid())
  orderId         Int
  order           Order     @relation(fields: [orderId], references: [id])
  bookId          Int
  book            Book      @relation(fields: [bookId], references: [id])
  maxDownloads    Int       @default(5)
  downloadCount   Int       @default(0)
  expiresAt       DateTime
  createdAt       DateTime  @default(now())
  lastUsedAt      DateTime?
  @@index([token])
  @@index([orderId])
  @@index([bookId])
}

model MediaItem {
  id             Int       @id @default(autoincrement())
  kind           String    @default("audio")
  slug           String    @unique
  title          String
  description    String?
  coverUrl       String?
  fileUrl        String?
  externalUrl    String?
  duration       String?
  publishedAt    DateTime?
  isPublished    Boolean   @default(false)
  isVisible      Boolean   @default(false)
  seoTitle       String?
  seoDescription String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Event {
  id                  Int       @id @default(autoincrement())
  slug                String    @unique
  title               String
  description         String?
  startsAt            DateTime
  endsAt              DateTime?
  locationText        String?
  locationUrl         String?
  eventImageUrl       String?
  isPublished         Boolean   @default(false)
  isVisible           Boolean   @default(false)
  keepVisibleAfterEnd Boolean   @default(false)
  seoTitle            String?
  seoDescription      String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model ContactSubmission {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String?
  message   String?
  source    String?
  createdAt DateTime @default(now())
}

model EmailSubscriber {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  source    String?
  createdAt DateTime @default(now())
}

model NavigationItem {
  id        Int      @id @default(autoincrement())
  label     String
  href      String
  sortOrder Int      @default(0)
  isActive  Boolean  @default(true)
}

model SiteSettings {
  id               Int      @id @default(1)
  siteName         String   @default("Maya Allan")
  tagline          String?
  contactEmail     String?
  socialTwitter    String?
  socialInstagram  String?
  socialFacebook   String?
  socialYoutube    String?
  socialTiktok     String?
  footerText       String?

  // Nullable featured book for homepage; nullable so existing rows remain valid
  featuredBookId   Int?
  featuredBook     Book?    @relation(fields: [featuredBookId], references: [id])

  updatedAt        DateTime @updatedAt
}

